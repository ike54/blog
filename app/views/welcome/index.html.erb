<h1>rails novitiate</h1>


<% @posts.order('posts.created_at DESC').each do |post| %>
<p>
  <strong>Title:</strong>
  <%= post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= post.text %>
</p>

<h2>Comments</h2>
<%= render post.comments %>

<h2>Add a comment:</h2>
<%= form_for([post, post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<% end %>